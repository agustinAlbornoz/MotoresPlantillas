<table>
    <thread>
        <tr>
            <th scope='col'>Productos</th>
            <th scope='col'>Precio</th>
            <th scope='col'>Thumbnail</th>
        </tr>
        <thread>
            <tbody>
                <% if (datos.length === 0) { %>
                    <tr>
                        <td colspan="3">
                            No hay productos para mostrar
                        </td>
                    </tr>
                    <% } else { %>
                        <% for (let i=0; i < datos.length; i++) { %>
                            <tr>
                                <td><%=datos[i].name%></td>
                                <td>$<%=datos[i].price%><td>
                                <td><img src="<%=datos[i].thumbnail%>" alt="imagen"></td>
                            </tr>
                            <% } } %>
            </tbody>
</table>